<h1 class="text-center">Fus' drinks for a groovy night:</h1>
<hr>



<div class="row">
	<% @cocktails.each do |cocktail| %>
	<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
		<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1) 25%, rgba(0,0,0,0.5) 100%), url(<%= cocktail.image %>);">
			<div class="card-description">
				<h2><%= cocktail.name %></h2>
			</div>
			<a class="card-link" href="#" ></a>
			<%= link_to "", cocktail_path(cocktail), class: "card-link" %>
		</div>
	</div>
	<% end %>
</div>
