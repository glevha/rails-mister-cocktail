<h1 class="text-center"><%= @cocktail.name %>:</h1>
<hr>
<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<ul><% @cocktail.doses.each do |dose| %>
				<li>
					<strong><%= dose.ingredient.name %>: </strong>   <%= dose.description %>   
					<%= link_to "delete ingredient", cocktail_dose_path(@cocktail, dose), method: :delete, class: "pinky", data: { confirm: 'Are you sure?'} %>
				</li>
				<% end %>
			</ul>
			<br>
			<%= render '/doses/form', cocktail: @cocktail, dose: @dose  %>		
		</div>
	</div>
</div>